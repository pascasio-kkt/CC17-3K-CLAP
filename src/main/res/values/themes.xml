<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item> <!-- Setting default font -->
    </style>

    <!-- Custom button style for general use -->
    <style name="CardButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
    </style>


    <!-- Custom TextView style -->
    <style name="CustomTextViewStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- CardView Style -->
    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>