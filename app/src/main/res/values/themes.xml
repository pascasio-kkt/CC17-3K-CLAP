<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.BlueWave" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/maincolor</item>
        <item name="colorPrimaryVariant">@color/maincolor</item>
        <item name="colorOnPrimary">@color/maincolor</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.BlueWave" parent="Base.Theme.BlueWave" />

    <style name="Theme.App.BlueWave" parent="Theme.BlueWave">
        <item name="windowSplashScreenBackground">@color/maincolor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.BlueWave</item>
    </style>

    <style name="CardButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>
